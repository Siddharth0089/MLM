# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DB_URL=mongodb://localhost:27017/multilingual_meeting_platform

# Stream.io (Video Call Service)
STREAM_API_KEY=your_stream_api_key_here
STREAM_API_SECRET=your_stream_api_secret_here

# Frontend URL
CLIENT_URL=http://localhost:5173

# Lingo.dev (Translation & Speech-to-Text)
LINGO_API_KEY=your_lingo_api_key_here
LINGO_API_URL=https://api.lingo.dev/v1
LINGO_STT_WS_ENDPOINT=wss://api.lingo.dev/v1/stt/stream

# Resend Email Service
RESEND_API_KEY=re_your_api_key_here
RESEND_FROM_EMAIL=Meeting Platform <noreply@yourdomain.com>

# Translation Settings
NOTES_AUTO_TRANSLATE_INTERVAL_SECONDS=3
CAPTION_CHUNK_MS=1000
MAX_TRANSLATION_BATCH_SIZE=10